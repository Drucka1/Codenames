<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codenames.observers.ManageWordView">
    <center>

        <HBox spacing="10" >
            
            <VBox spacing="10" alignment="CENTER">
         
               <Label text="Manage list"/>
               <ListView fx:id="listContainer" prefHeight="700" prefWidth="300"/>
               <HBox alignment="CENTER" spacing="10">
                  <Button onAction="#addNewList" text="+" />
                  <Button onAction="#removeList" text="-" />
               </HBox>

            </VBox>

            <VBox spacing="10" alignment="CENTER">

               <Label text="Manage hints in list"/>
               <ListView fx:id="hintsContainer" prefHeight="700" prefWidth="300"/> 
               <HBox alignment="CENTER" spacing="10">
                  <Button onAction="#addHintInList" text="+" />
                  <Button onAction="#removeHintInList" text="-" />
               </HBox>

            </VBox>

            <VBox spacing="10" alignment="CENTER">
                
               <Label text="Manage words in list"/>
               <ListView fx:id="wordsContainer" prefHeight="700" prefWidth="300"/>
               <HBox alignment="CENTER" spacing="10">
                  <Button onAction="#addWordInList" text="+" />
                  <Button onAction="#removeWordInList" text="-" />
               </HBox>

            </VBox>

        </HBox>

    </center>
</BorderPane>
