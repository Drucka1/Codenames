<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codenames.controller.GameDuoController">
    <top>
        <VBox fx:id="vboxTop" alignment="CENTER" spacing="20">
            <children>
                <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" preserveRatio="true" />
            </children>
        </VBox>
    </top>

    <center>
        <VBox fx:id="timerContainer" alignment="CENTER" spacing="20">
            <children>
                <GridPane hgap="10" vgap="10" fx:id="gridPane" alignment="CENTER"/>
                <Button text="Next Turn" fx:id="button" onAction="#handleButton"/>
                <Label fx:id="info"/>
            </children>
        </VBox>
    </center>

    <bottom>
    </bottom>
   </BorderPane>
