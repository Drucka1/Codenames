<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" alignment="CENTER">

    <VBox fx:id="blueStats" spacing="20" alignment="CENTER" style="-fx-background-color: lightblue; -fx-padding: 10;">
        <Label text="BLUE TEAM"/>
        <Label fx:id="blueAverageTimeLabel"/>
        <Label fx:id="blueAverageCardsLabel"/>
        <Label fx:id="blueNumberOfErrorsLabel"/>
        <Label fx:id="blueNumberOfGuessLabel"/>
        <Label fx:id="blueNumberOfTurnsLabel"/>
        <Label fx:id="blueRemainingCardsLabel"/>
    </VBox>

    <VBox fx:id="redStats" spacing="20" alignment="CENTER" style="-fx-background-color: lightcoral; -fx-padding: 10;">
        <Label text="RED TEAM"/>
        <Label fx:id="redAverageTimeLabel"/>
        <Label fx:id="redAverageCardsLabel"/>
        <Label fx:id="redNumberOfErrorsLabel"/>
        <Label fx:id="redNumberOfGuessLabel"/>
        <Label fx:id="redNumberOfTurnsLabel"/>
        <Label fx:id="redRemainingCardsLabel"/>
    </VBox>

</HBox>